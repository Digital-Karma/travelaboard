{% extends 'base.html.twig' %}

{% block title %}Nos Super Focus
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="my-3">Voici nos plus beaux FocusPays.</h1>
		<div class="row">
    {% for focs in focus %}
    {% set url = path('focus_show_pays', {'slug': focs.slug }) %}
				<div class="col-md-4">
				<div class="card bg-light mb-3">
                    <div class="card-header text-center">
                    <p class="h3">Focus Pays</p>
                        <small>Pas encore not√©</small>
                    </div>
                    <a href="{{ url }}">
                    <img src="{{focs.imageCover}}" alt="Image de l'appartement" style="height:200px; width: 100%; display: block">
                    </a>
                    <div class="card-body">
                        <h4 class="card-title">
                        <a href="{{ url }}">{{ focs.title }}</a>
                        </h4>
                        <p class="card-text">
                            {{ focs.introduction }}
                        </p>
                        <a class="btn btn-secondary" href="{{ url }}">En savoir plus.</a>
                    </div>
                </div>
			</div>
        {% endfor %}
		</div>
	</div>
{% endblock %}
